# {{ ansible_managed }}

general {
    colors = true
    color_good = "#859900"
    color_degraded = "#cb4b16"
    color_bad = "#dc322f"
    color_separator = "#586e75"
    interval = 5
    output_format = "i3bar"
}

order += "disk /"
order += "memory"
order += "cpu_usage"
order += "battery 0"
order += "tztime local"

disk "/" {
    format = "  %avail"
}

memory {
    format = "  %used"
    threshold_degraded = "10%"
    threshold_critical = "5%"
}

cpu_usage {
    format = "  %usage"
}

battery 0 {
    format = "%status %percentage %remaining"
    format_down = ""
    status_chr = " "
    status_bat = " "
    status_full = " "
    low_threshold = 20
}

tztime local {
    format = "  %Y-%m-%d %H:%M"
}
